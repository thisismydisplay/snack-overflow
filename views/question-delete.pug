extends layout.pug

include utils.pug

block content
    div.delete-confirm
        p Are you sure you want to delete this question?
    .delete-form
        form(action=`/questions/${question.id}/delete` method="POST")
            input(type="hidden" name="_csrf" value=csrfToken)
            button(class="delete-button" type="submit") Delete Question
            a(class="cancel" href=`/questions/${question.id}` role="button") Cancel
