extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/questions/${question.id}/edit` method="POST")
        input(type='hidden' name='_csrf' value=csrfToken)
        label(for='title') Title:
        input(type='text' name='title' value=question.title)
        label(for='content') Content:
        textarea(name='content') #{question.content}
        div.form-buttons
            button(type='submit' class='form-submit-button') Edit Question
            a(href=`/questions/${question.id}` class='form-cancel-button') Cancel
